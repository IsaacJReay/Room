@model RoomTypeModal

@{
    ViewData["Title"] = "RoomType";
    ViewData["Modal"] = "Edit\nType";
    int id = ViewBag.RoomType.RoomTypeId;
    string name = ViewBag.RoomType.RoomType;
    string desc = ViewBag.RoomType.RoomTypeDescription;
    bool idt = ViewBag.RoomType.IsActive;
}
<form asp-controller="Room" asp-action="EditRoomType" method="post">
    <div class="form-floating mb-3">
        <input type="text" class="form-control" id="InputID" placeholder="123" asp-for="RoomTypeId" value=@id readonly>
        <label for="floatingInput">ID</label>
    </div>
    <div class="form-floating mb-3">
        <input type="text" class="form-control" id="InputType" placeholder="Type" asp-for="RoomType">
        <label for="floatingInput">Type</label>
    </div>
    <div class="form-floating mb-3">
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" asp-for="RoomTypeDescription"></textarea>
        <label for="floatingInput">Description</label>
    </div>
    <div class="form-check form-switch">
        @if (idt) {
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked asp-for="IsActive">
        }
        else {
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" asp-for="IsActive">
        }
        <label class="form-check-label" for="flexSwitchCheckChecked">Active</label>
    </div>
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <button class="btn btn-primary" type="submit" value="Submit">Submit</button>
    </div>
</form>